Possibilitées: list[str] = ["p", "f", "c"]
PFC: str = input("")

# prend en paramètre un message à afficher, et une liste de mots autorisés
# demande à l'utilisateur de rentrer quelque chose
# si c'est bon, on renvoie le mot
# sinon on boucle
def Ask_input(Possibilitées):

    PFC: str = input("Faites un choix parmis toutes ces Possibilitées[] : ")
    x : int = 0

    while x < len(Possibilitées[x]):

        Possibilitées[0] = "p"
        Possibilitées[1] = "f"
        Possibilitées[2] = "c"
    else:
        print("Ce choix ne correspond pas à ce qui a été demander :/ Veuillez recommencer. ")

Ask_input (Possibilitées)
