import random
def display_game_status(x,y,z):
    print(f"Manche win joueur : {x}    Manche win IA : {y}")
    print(f"Round {z} :")

def get_player_choice() -> int:
    choice: str = input("Choisissez entre pierre, papier, ciseaux : ")

    if choice == "pierre":
        numPlayer: int = 1
        return numPlayer
    elif choice == "papier":
        numPlayer: int = 2
        return numPlayer
    elif choice == "ciseaux":
        numPlayer: int = 3
        return numPlayer


def compare_choice(numPlayer: int, numIA, winPlayer, winIA) -> int:
    condition: int
    if numIA == numPlayer:
        print("égalité !")
        condition = 0
        return condition

    elif numIA == 1:
        if numPlayer == 2:
            print("Votre papier bat sa pierre")
            return winPlayer + 1
        elif numPlayer == 3:
            print("Vos ciseaux perdent contre sa pierre")
            condition = 0
            return condition

    elif numIA == 2:
        if numPlayer == 1:
            print("Votre pierre perd contre son papier")
            return winIA + 1
        elif numPlayer == 3:
            print("Vos ciseaux gagnent contre son papier")
            return winPlayer + 1

    elif numIA == 3:
        if numPlayer == 1:
            print("Votre pierre bat ses ciseaux")
            return winPlayer + 1
        elif numPlayer == 2:
            print("Votre papier perd contre ses ciseaux")
            return winIA + 1

def retry():
    again: str = input('Veux-tu rejouer ?\nType "y" or "n" \n')

    if again == "y":
        isBeginning = True
        print("okkkkk")
    elif again == 'n':
        isPlayingGame = False
        print('OK THEN, C CIAO!\n\n\n\n')

def launch_game():
    isPlayingGame: bool = True
    while isPlayingGame:
        maxwin: int = 3
        round: int = 1
        winPlayer: int = 0
        winIA: int = 0

        while winPlayer < maxwin and winIA < maxwin:
            display_game_status(winPlayer, winIA, round)
            numPlayer: int = get_player_choice()
            numIA: int = random.randint(1, 3)
            print(numPlayer)
            print(numIA)
            compare_choice(numPlayer, numIA, winPlayer, winIA)
            round += 1

        isPlayingGame = retry()

launch_game()
